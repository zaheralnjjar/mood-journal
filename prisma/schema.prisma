// Prisma schema - SQLite for development, PostgreSQL (Supabase) for production

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String?
  name          String?
  avatar        String?
  phone         String?
  
  // Ù…Ø¹Ù„ÙˆÙ…Ø§Øª Supabase Auth
  supabaseId    String?   @unique
  
  // Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…
  settings      Json?
  
  // Ø§Ù„ØªÙˆØ§Ø±ÙŠØ®
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Ø§Ù„Ø¹Ù„Ø§Ù‚Ø§Øª
  journals      JournalEntry[]
  tags          Tag[]
  templates     Template[]
  favorites     Favorite[]
  sessions      Session[]
  
  @@map("users")
}

// Ø§Ù„Ø¬Ù„Ø³Ø§Øª
model Session {
  id           String   @id @default(uuid())
  userId       String
  token        String   @unique
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([userId])
  @@map("sessions")
}

// Ø§Ù„ÙŠÙˆÙ…ÙŠØ§Øª
model JournalEntry {
  id          String    @id @default(uuid())
  title       String
  content     Json
  mood        String?
  date        DateTime
  location    Json?
  weather     Json?
  attachments Json?
  templateId  String?
  smartForms  Json?
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  tags        JournalTag[]
  favorites   Favorite[]
  
  @@index([userId])
  @@index([date])
  @@map("journal_entries")
}

// Ø§Ù„ÙˆØ³ÙˆÙ…
model Tag {
  id        String   @id @default(uuid())
  name      String
  color     String   @default("#8b5cf6")
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  journals  JournalTag[]
  createdAt DateTime @default(now())
  
  @@unique([userId, name])
  @@index([userId])
  @@map("tags")
}

// Ø¹Ù„Ø§Ù‚Ø© Ø§Ù„ÙŠÙˆÙ…ÙŠØ§Øª Ù…Ø¹ Ø§Ù„ÙˆØ³ÙˆÙ…
model JournalTag {
  journalId  String
  tagId      String
  
  journal    JournalEntry @relation(fields: [journalId], references: [id], onDelete: Cascade)
  tag        Tag          @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@id([journalId, tagId])
  @@map("journal_tags")
}

// Ø§Ù„Ù…ÙØ¶Ù„Ø©
model Favorite {
  id        String   @id @default(uuid())
  userId    String
  journalId String
  
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  journal   JournalEntry @relation(fields: [journalId], references: [id], onDelete: Cascade)
  
  createdAt DateTime     @default(now())
  
  @@unique([userId, journalId])
  @@map("favorites")
}

// Ø§Ù„Ù‚ÙˆØ§Ù„Ø¨
model Template {
  id          String   @id @default(uuid())
  name        String
  description String?
  icon        String   @default("ğŸ“")
  category    String   @default("daily")
  fields      Json
  isPublic    Boolean  @default(false)
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([category])
  @@map("templates")
}
